<h1><%= name %> Proveedor</h1>
<%= form_for(@provider) do |f| %>
<% @provider.errors.full_messages.each do |message| %>
<div class="be-red white top-space">
    * <%=message%>
</div>
<%end%>
<div class="form-group">
    
    <div class="col-md-5">
        <%= f.text_field :nombre, placeholder: "Nombre", class:"form-control" %>
    </div>
    
</div>
<div class="form-group">
    <div class="col-md-4">
      <%= f.number_field  :telefono, placeholder: "Telefono",class:"form-control" %>
    </div>
</div>

<div class="form-group">
    <div class="col-md-6">
        <%= f.text_field :empresa, placeholder: "Empresa", class:"form-control" %>
    </div>
    
</div>
<div class="form-group">
    
    <div class="col-md-5" >
        <%= f.text_field :ruc_empresa, placeholder: "Ruc Empresa", class: "col-md-4 control-label",class:"form-control" %>
    </div>
    
</div>
<div class="form-group">
    <%= f.submit "Guardar",class:"btn be-red white " %>
</div>
<%end%>