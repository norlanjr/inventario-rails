<p id="notice"><%= notice %></p>

<h1>Stocks</h1>

<table class="table table-striped">
  <thead class="thead-dark">
    <tr>
      <th>Article</th>
      <th>Existencia</th>
      <th>Existencia minima</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stocks.each do |stock| %>
      <tr>
        <td><%= stock.article.nombre %></td>
        <td><%= stock.existencia %></td>
        <td><%= stock.existencia_minima %></td>
        <td>
          <button type="button" class="btn btn-info"><%= link_to 'Show', stock %>
          <button type="button" class="btn btn-secondary"><%= link_to 'Edit', edit_stock_path(stock) %>
          <button type="button" class="btn btn-danger"><%= link_to 'Destroy', stock, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

