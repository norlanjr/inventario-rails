<h1><%= name %> articulo</h1>
<%= form_for(@article) do |f| %>
<% @article.errors.full_messages.each do |message| %>
<div class="be-red white top-space">
    * <%=message%>
</div>
<%end%>
<div class="form-group">
    
    <div class="col-md-8">
        <%= f.text_field :nombre, placeholder: "Nombre", class:"form-control",style:" width:300px" %>
    </div>
    
</div>
<div class="form-group">
    <div class="col-md-8">
      <%= f.text_field :descripcion, placeholder: "Descripcion",style:"height:100px",class:"form-control" %>
    </div>
</div>

<div class="form-group">
    <div class="col-md-8">
        <%= f.number_field :costo, placeholder: "Costo", class:"form-control" %>
    </div>
    
</div>
<div class="form-group">
    <div class="col-md-8">
        <%= f.number_field :precio, placeholder: "Precio",  class:"form-control" %>
    </div>
    
</div>

<div class="form-group">
    <%= f.submit "Guardar",class:"btn be-red white " %>
</div>
<%end%>